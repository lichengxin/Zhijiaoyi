<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spac_15">


    <TextView
        android:id="@+id/tv0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:padding="@dimen/spac_5"
        android:text="浦发银行"
        android:textColor="#333333"
        android:textSize="@dimen/spac_20"/>

    <Button
        android:gravity="center_vertical|left"
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_discover_item_select"
        android:padding="@dimen/spac_5"
        android:text="买入"
        android:textColor="#666666"
        android:textSize="@dimen/spac_18"/>


    <Button
        android:gravity="center_vertical|left"
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spac_10"
        android:background="@drawable/bg_discover_item_select"
        android:padding="@dimen/spac_5"
        android:text="卖出"
        android:textColor="#666666"
        android:textSize="@dimen/spac_18"/>

    <Button
        android:gravity="center_vertical|left"
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spac_10"
        android:background="@drawable/bg_discover_item_select"
        android:padding="@dimen/spac_5"
        android:text="添加到自选"
        android:textColor="#666666"
        android:textSize="@dimen/spac_18"/>


</LinearLayout>